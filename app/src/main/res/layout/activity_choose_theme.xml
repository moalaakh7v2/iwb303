<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTheme">

    <TextView
        android:id="@+id/textView"
        android:layout_width="123dp"
        android:layout_height="22dp"
        android:layout_marginTop="136dp"
        android:text="Choose Theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/drpTheme"
        android:layout_width="205dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:entries="@array/lstTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnApplyTheme"
        android:layout_width="126dp"
        android:layout_height="52dp"
        android:layout_marginTop="56dp"
        android:onClick="btnApplay"
        android:text="Apply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drpTheme" />

</androidx.constraintlayout.widget.ConstraintLayout>