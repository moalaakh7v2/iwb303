<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.student.AddNewStudentActivity">

        <TextView
            android:id="@+id/lblAddFName"
            android:layout_width="138dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="First Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblAddLName"
            android:layout_width="138dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Last Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddFName" />

        <EditText
            android:id="@+id/txtAddFName"
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAddFName" />

        <EditText
            android:id="@+id/txtAddLName"
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAddLName" />

        <TextView
            android:id="@+id/lblAddUName"
            android:layout_width="138dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="UserName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddPhone" />

        <TextView
            android:id="@+id/lblAddPhone"
            android:layout_width="138dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddLName" />

        <Spinner
            android:id="@+id/drpStudentGender"
            android:layout_width="231dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAddGender" />

        <EditText
            android:id="@+id/txtAddPhone"
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="phone"
            android:phoneNumber="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAddPhone" />

        <Button
            android:id="@+id/btnApplyAddStudent"
            android:layout_width="123dp"
            android:layout_height="52dp"
            android:layout_marginTop="51dp"
            android:onClick="btnAddStudent"
            android:text="Applay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddAddress" />

        <EditText
            android:id="@+id/txtAddUName"
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAddUName" />

        <TextView
            android:id="@+id/lblAddAddress"
            android:layout_width="138dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Address"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddPassword" />

        <EditText
            android:id="@+id/txtAddAddress"
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.528"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAddAddress" />

        <TextView
            android:id="@+id/lblAddPassword"
            android:layout_width="138dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="Password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drpStudentGender" />

        <EditText
            android:id="@+id/txtAddPassword"
            android:layout_width="256dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblAddPassword" />

        <TextView
            android:id="@+id/lblAddGender"
            android:layout_width="138dp"
            android:layout_height="27dp"
            android:layout_marginTop="36dp"
            android:layout_marginStart="49dp"
            android:gravity="center"
            android:text="Gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.343"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddUName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>